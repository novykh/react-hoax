{
  "compilerOptions": {
    "outDir": "./es",
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "declaration": false,
    "allowJs": true,
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": ["node_modules", "docs", "jest", "**/*_test.*"]
}
